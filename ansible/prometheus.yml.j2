global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node'
    static_configs:
      - targets: 
        - '{{ db_host }}:9100'
        - '{{ app_host }}:9100'
        - '{{ pgadmin_host }}:9100'
        - 'localhost:9100'

  - job_name: 'postgres'
    static_configs:
      - targets: ['{{ db_host }}:9187']
